{
  "name": "smokefree-india-tests",
  "version": "1.0.0",
  "description": "Comprehensive E2E and Integration Tests for SmokeFree India",
  "type": "module",
  "scripts": {
    "test": "jest --runInBand --detectOpenHandles",
    "test:api": "jest tests/api --runInBand",
    "test:e2e": "jest tests/e2e --runInBand",
    "test:unit": "jest tests/unit --runInBand",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "cypress:open": "cypress open",
    "cypress:run": "cypress run"
  },
  "dependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "axios": "^1.6.0",
    "form-data": "^4.0.0",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^9.1.0",
    "mongoose": "^8.0.0",
    "puppeteer": "^21.5.0",
    "supertest": "^6.3.0"
  },
  "devDependencies": {
    "cypress": "^13.5.0"
  },
  "jest": {
    "testEnvironment": "node",
    "testTimeout": 30000,
    "verbose": true,
    "collectCoverageFrom": ["server/**/*.js", "!server/scripts/**"]
  }
}
